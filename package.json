{
  "name": "tic-tac-toe",
  "version": "0.0.0",
  "description": "progressive, multiplayer tic tac toe, made with choo",
  "main": "src/app.js",
  "scripts": {
    "deps": "dependency-check . && dependency-check . --extra --no-dev --ignore-module normalize.css",
    "copy": "mkdir -p dist && cp src/index.html src/manifest.json CNAME dist/ && cp -R src/images dist",
    "sw": "sw-precache --root=dist --static-file-globs='dist/**/*.*'",
    "dev": "budo src/app.js --open --live --pushstate --host 0.0.0.0 --port 8080 --",
    "build": "npm run copy && NODE_ENV=production browserify -e src/app.js -o dist/app.js -t envify -t sheetify/transform -g unassertify -g es2040 -g uglifyify | uglifyjs && npm run sw",
    "test": "standard --verbose | snazzy && npm run deps",
    "deploy": "npm run build && surge ./dist"
  },
  "browserify": {
    "transform": [
      "sheetify/transform"
    ]
  },
  "keywords": [
    "choo",
    "pwa"
  ],
  "author": "YerkoPalma",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.14.0",
    "choo": "^3.0.2",
    "localforage": "^1.4.2",
    "normalize.css": "^4.2.0"
  },
  "devDependencies": {
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "budo": "^8.3.0",
    "choo-log": "^1.4.0",
    "dependency-check": "^2.5.3",
    "envify": "^3.4.1",
    "es2040": "^1.2.2",
    "insert-css": "^0.2.0",
    "sheetify": "^5.0.3",
    "snazzy": "^4.0.1",
    "standard": "^7.1.2",
    "surge": "^0.18.0",
    "sw-precache": "^4.0.0",
    "uglify-js": "^2.7.0",
    "uglifyify": "^3.0.2",
    "unassertify": "^2.0.3",
    "yo-yoify": "^3.4.1"
  }
}
